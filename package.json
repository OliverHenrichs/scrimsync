{
  "name": "scrimsync",
  "version": "1.0.0",
  "description": "Discord bot with web interface for managing invites",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "build:client": "vite build --mode development",
    "build:client:watch": "vite build --mode development --watch",
    "build:client:prod": "vite build --mode production",
    "build:prod": "npm run build && npm run build:client:prod",
    "dev": "ts-node-dev -r tsconfig-paths/register --respawn --transpile-only src/index.ts",
    "dev:full": "npm run build:client && npm run dev",
    "dev:watch": "npm run build:client:watch & npm run dev",
    "start": "node -r ./tsconfig-paths-bootstrap.js dist/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts",
    "clean": "rimraf dist",
    "prebuild": "npm run clean"
  },
  "keywords": [
    "discord",
    "bot",
    "typescript",
    "web",
    "invites"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "compression": "^1.7.4",
    "connect-redis": "^7.1.0",
    "cors": "^2.8.5",
    "discord.js": "^14.14.1",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-session": "^1.17.3",
    "helmet": "^7.1.0",
    "joi": "^17.11.0",
    "passport": "^0.7.0",
    "passport-discord": "^0.1.4",
    "redis": "^4.6.10",
    "winston": "^3.11.0",
    "zod": "^3.25.67"
  },
  "devDependencies": {
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/express-session": "^1.17.10",
    "@types/jest": "^29.5.8",
    "@types/node": "^20.10.0",
    "@types/passport": "^1.0.16",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.1",
    "jest": "^29.7.0",
    "prettier": "^3.1.0",
    "rimraf": "^5.0.5",
    "ts-jest": "^29.1.1",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.3.2",
    "vite": "^5.4.19"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
